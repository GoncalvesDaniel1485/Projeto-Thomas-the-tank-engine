CREATE TABLE Passageiro 
( 
 id_Passageiro INT PRIMARY KEY,  
 Nome INT,  
 idade INT
); 

CREATE TABLE viagem 
( 
 Tempo INT,  
 id_Viagem INT PRIMARY KEY,  
 Destino INT,  
 idOnibus INT,  
 idBilhete INT  
); 

CREATE TABLE Motorista 
( 
 Nome INT,  
 id_Motorista INT PRIMARY KEY,  
 idOnibus INT  
); 

CREATE TABLE Bilhete 
( 
 Valor INT,  
 id_Bilhete INT PRIMARY KEY,  
 idPassageiro INT  
); 

CREATE TABLE Onibus 
( 
 Placa_onibus INT PRIMARY KEY  
); 

ALTER TABLE viagem ADD FOREIGN KEY(idOnibus) REFERENCES Onibus (Placa_onibus);
ALTER TABLE viagem ADD FOREIGN KEY(idBilhete) REFERENCES Bilhete (id_Bilhete);
ALTER TABLE Motorista ADD FOREIGN KEY(idOnibus) REFERENCES Onibus (Placa_onibus);
ALTER TABLE Bilhete ADD FOREIGN KEY(idPassageiro) REFERENCES Passageiro (id_Passageiro);


